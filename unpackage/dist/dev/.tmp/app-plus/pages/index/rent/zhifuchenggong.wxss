
.app{
	width:750rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
/*支付成功icon--------------------*/
.icon{
	width:100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	border:0rpx solid red;
}
.img{
	width:200rpx;
	height:200rpx;
	margin:80rpx 0 48rpx 0
}
.success{
	font-size:48rpx;
	font-weight:bold;
	margin-bottom:72rpx;
}
/*订单详细信息-----------------------------*/
.details{
	width:94%;
}
.title{
	font-size:36rpx;
	color:#666666;
	font-weight:bold;
	padding-bottom:20rpx;
	border-bottom:1rpx solid #E1E1E1;
}
.order{
	border-bottom:1rpx solid #E1E1E1;
	padding:20rpx 0;
}
.number,.price,.how{
	color:#B8B4B4;
	font-size:32rpx;
}
.number,.price{
	margin-bottom:20rpx
}
.number ._span,.how ._span{
	font-size:32rpx;
	color:#212121
}
.price ._span{
	font-size:32rpx;
	font-weight:400;
	color:rgba(249,10,10,1);
}
/*收货人信息----------------------*/
.name,.tel{
	color:#B8B4B4;
	font-size:32rpx;
	margin-top:20rpx;
}
.name ._span,.tel ._span{
	font-size:32rpx;
	color:#212121
}
/*底部按钮---------------------*/
.but{
	border:0rpx solid red;
	margin-top:58rpx;
}
.but1{
	width:648rpx;
	height:80rpx;
	font-size:28rpx;
	background:rgba(255,195,0,1);
	opacity:1;
	border-radius:40rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	margin-bottom:40rpx;
}
.but2{
	width:648rpx;
	height:80rpx;
	font-size:28rpx;
	border:2px solid rgba(255,195,0,1);
	opacity:1;
	border-radius:40rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	background: #ffffff;
}

