.app {
  width: 750rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  height: 100vh;
}
/*头部选择类型-----------------------------*/
.head {
  width: 24%;
  border: 0rpx solid red;
  background: #FAFAFA;
  height: 100%;
  border: 0rpx solid red;
}
.heads {
  border: 1rpx solid #FAFAFA;
}
.type {
  width: 100%;
  border-left: 8rpx solid #FAFAFA;
  margin: 24rpx 0;
}
.type_title {
  text-align: center;
  width: 80%;
  line-height: 48rpx;
  font-size: 32rpx;
  border: 0rpx solid red;
  margin-left: 10rpx;
}
/*动态样式*/
.active {
  border-color: #ffffff;
  color: #FFC300;
  background: #fff;
}
.active .type {
    border-left: 8rpx solid #FFC300;
}
/*兼职列表--------------------------------------*/
.xinshengzhiyin, .shixi, .jianzhi, .zhaopin, .qita {
  width: 72%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border: 0rpx solid red;
}
